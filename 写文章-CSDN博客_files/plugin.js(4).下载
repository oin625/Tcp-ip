function(){var b=document.getElementsByClassName("cke_button__summary"),c=document.createElement("div");c.setAttribute("class","summary_prompt");c.innerText="添加摘要";if(b.length){var a=document.createElement("style");a.type="text/css";a.innerHTML='.cke_button__summary{position: relative;}.summary_prompt{position: absolute;color:#fff;text-align: center;top: 38px;left: -16px;width: 64px;height: 32px;line-height: 32px;background: rgba(15,15,15,0.80);border-radius: 4px;}.summary_prompt::before{content:".";display:block;width: 0;height: 0;border-style: solid;border-width: 0 7px 7px 7px;border-color: transparent transparent rgba(15,15,15,0.80) transparent;position: absolute;top: -7px;left: 24px;}.hide_summary_prompt{animation: 1s hide_summary_prompt forwards;}@keyframes hide_summary_prompt{0% {opacity:1; }100% { opacity:0; }}';
